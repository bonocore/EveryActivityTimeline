<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Lead activities timeline</masterLabel>
    <description>A demo LWC component to show the engagement activities (GB_Timeline_Activity__c custom object) of a lead</description>
    <targets>
      <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
      <targetConfig targets="lightning__RecordPage">
          <objects>
              <object>Lead</object>
          </objects>
          <property name="showNewActivityButton" label="Show the 'Add new activity' button" type="Boolean" default="true" required="true"/>
      </targetConfig>
  </targetConfigs>
</LightningComponentBundle>